<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:id="@+id/idIBtnCow"
        android:drawableTop="@drawable/cow_states"
        android:layout_width="match_parent"
        android:text="Cow that mooos"
        android:layout_height="wrap_content" />

    <Button
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintTop_toBottomOf="@id/idIBtnCow"
        android:id="@+id/idIBtnDuck"
        android:drawableTop="@drawable/duck_states"
        android:text="Duck that quack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintTop_toBottomOf="@id/idIBtnDuck"
        android:id="@+id/idIBtnSheep"
        android:drawableTop="@drawable/sheep_states"
        android:layout_width="match_parent"
        android:text="Sheep that beeee"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>