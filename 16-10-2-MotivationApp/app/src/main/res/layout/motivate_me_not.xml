<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //mostar um texto na tela, um label
    <!-- widgets -->
    <TextView
        android:text="@string/strSeekBarExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <TextView
        android:textAlignment="center"
        android:id="@+id/idTvPorcent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:progress="50"
        android:min="0"
        android:max="100"
        android:id="@+id/idSbProbPositive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    //um bot√£o
    <Button
        android:id="@+id/idBtnGetMsg"
        android:text="@string/strBtnGetMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/idTvFeedback"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>