    <Spinner
        android:id="@+id/idSpnHowToNavigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <Button
        app:layout_constraintTop_toBottomOf="@+id/idSpnHowToNavigate"
        android:id="@+id/idBtnUrlMad"
        android:text="@string/strUrlMad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/idBtnUrlMad"
        android:id="@+id/idBtnUrlDn"
        android:text="@string/strUrlDn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

